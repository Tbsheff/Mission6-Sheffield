@{
    ViewData["Title"] = "Delete";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


@* Do you want to delete this movie? *@
@model movies
<h2 class="center">Are you sure you want to delete this record? </h2>
<h3 class="center">@ViewBag.movie.Title</h3>

<form method="post" style="display: inline-flex;
    width: 100%;
    gap: 1.25rem;
    justify-content: center;">
    <input  type="hidden" asp-for="MovieId" value="@ViewBag.movie.MovieId" />
    <input class="btn btn-danger" type="submit" value="Delete" />
    <a class="btn btn-info" asp-action="ViewCollection">Cancel</a>
</form>