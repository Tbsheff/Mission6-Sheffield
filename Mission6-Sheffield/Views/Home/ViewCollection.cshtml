@{
    ViewData["Title"] = "View Collection";
}

@* create table to hold the movies *@
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-striped table-bordered custom-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied to Plex</th>
            <th>Notes</th>         
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Category.Category</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.CopiedToPlex</td>
                <td>@movie.Notes</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieId="@movie.MovieId" class="btn btn-info">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieId="@movie.MovieId" class="btn btn-danger">Delete</a></td>

            </tr>
        }
    </tbody>
</table>