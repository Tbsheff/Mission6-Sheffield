<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  Joel Hilton Film Collection</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mission6_Sheffield.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <div class="logo">Joel Hilton</div>
        <nav>
            <ul>
                <li>
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="" asp-area="" asp-controller="Home" asp-action="about">About Joel</a>
                </li>
                <li>
                    <a class="" asp-area="" asp-controller="Home" asp-action="addToCollection">Add a Movie</a>
                </li>
                
            </ul>
        </nav>
    </header>
    
    
        <main role="main">
            @RenderBody()
        </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tyler Sheffield - <a asp-area="" asp-controller="Home" asp-action="about">About Joel</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
